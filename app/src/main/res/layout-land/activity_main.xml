<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF">

        <ImageView
            android:id="@+id/headerImage"
            android:src="@drawable/image"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:id="@+id/responseButtonSet"
            android:layout_below="@id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:weightSum="1.0">
            <Button
                android:id="@+id/likeit"
                android:layout_weight=".25"
                android:text="@string/like"
                android:elevation="2dp"
                android:onClick="alertLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/nope"
                android:layout_weight=".25"
                android:text="@string/nope"
                android:elevation="2dp"
                android:onClick="alertNope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/idgaf"
                android:layout_weight=".50"
                android:text="@string/idgaf"
                android:elevation="2dp"
                android:onClick="alertNotYet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_below="@id/responseButtonSet"
            android:text="@string/TVF_Desp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/knowMore"
            android:layout_below="@id/description"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/click_to_know_more"
            android:background="#0061FF"
            android:textColor="#FFF"
            android:elevation="2dp"
            android:onClick="openBrowser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/activityButtons"
            android:layout_below="@id/knowMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:weightSum="1.0">

            <Button
                android:id="@+id/feedback"
                android:layout_weight=".25"
                android:text="@string/feedback_fill"
                android:textColor="@color/colorAccent"
                android:elevation="2dp"
                android:onClick="feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/exit"
                android:layout_weight=".50"
                android:text="@string/exit_app"
                android:textColor="@color/colorAccent"
                android:elevation="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/aboutMe"
                android:layout_weight=".25"
                android:text="@string/take_to_about"
                android:textColor="@color/colorAccent"
                android:elevation="2dp"
                android:onClick="aboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>