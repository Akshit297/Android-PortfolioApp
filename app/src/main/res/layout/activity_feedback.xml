<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.example.android.udacity_project1.Feedback">

    <TextView
        android:id="@+id/enterDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_details"
        android:textSize="16sp"
        android:textColor="#000"
        android:padding="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/name"
        android:layout_below="@id/enterDetails"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:hint="@string/enter_name"
        android:inputType="text|textCapWords|textAutoComplete|textAutoCorrect"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/email"
        android:layout_below="@id/name"
        android:layout_margin="5dp"
        android:hint="@string/enter_email"
        android:inputType="text|textEmailAddress|textWebEmailAddress"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/message"
        android:layout_below="@id/email"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:hint="@string/enter_message"
        android:inputType="text|textAutoComplete|textMultiLine|textCapWords|textAutoCorrect|textLongMessage"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id = "@+id/empty_view"
        android:layout_height = "10dip"
        android:layout_width = "match_parent"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"/>
    
    <Button
        android:id="@+id/submit"
        android:onClick="submitForm"
        android:text="@string/submit_feedback"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/empty_view"
        android:background="#0061FF"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>