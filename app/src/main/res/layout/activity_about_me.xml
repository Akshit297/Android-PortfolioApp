<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.example.android.udacity_project1.AboutMe">

    <TextView
        android:id="@+id/textView"
        android:text="@string/hola"
        android:textSize="18sp"
        android:textColor="#000"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/dp"
        android:layout_below="@id/textView"
        android:src="@drawable/dp"
        android:scaleType="fitXY"
        android:layout_marginTop="12dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/desp"
        android:layout_below="@id/dp"
        android:text="@string/my_desp"
        android:textSize="16sp"
        android:textColor="#201C15"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/magic"
        android:layout_below="@id/desp"
        android:text="@string/part_my_desp"
        android:textStyle="italic"
        android:textSize="16sp"
        android:textColor="#201C15"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/source"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="@string/go_to_github"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/border"
        android:layout_marginBottom="16dp"
        android:padding="5dp"
        android:onClick="linkToSourceCode"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

</RelativeLayout>